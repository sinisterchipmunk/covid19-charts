<%
  cases  = reports.sum(:cum_cases)
  deaths = reports.sum(:cum_deaths)
%>

chart: {
  <% if defined?(small) && small %>
    backgroundColor: null,
    borderWidth: 0,
    margin: [2, 0, 2, 0],
    style: { overflow: 'visible' },
    // small optimalization, saves 1-2 ms each sparkline
    skipClone: true
  <% end %>
},

xAxis: {
  <% if defined?(small) && small %>
    labels: { enabled: false }
  <% else %>
    categories: <%= deaths.keys.to_json.html_safe %>
  <% end %>
},

yAxis: {
  title: null,
  labels: {
    formatter: function(a) { return ""+(parseInt(a.value * 10000) / 100) + "%"; }
  }
},

plotOptions: {
  area: {
    stacking: 'normal',
    lineColor: "#666666",
    lineWidth: 1,
    marker: {
      lineWidth: 1,
      lineColor: "#666666"
    }
  },

  <% if defined?(small) && small %>
    series: {
      animation: false,
      lineWidth: 1,
      shadow: false,
      states: {
          hover: {
              lineWidth: 1
          }
      },
      marker: {
          radius: 1,
          states: {
              hover: {
                  radius: 2
              }
          }
      },
      fillOpacity: 0.25
    }
  <% end %>
},

tooltip: {
  valueSuffix: '%',
  <% if defined?(small) && small %>
    hideDelay: 0,
    outside: true,
    shared: true
  <% end %>
},

credits: { enabled: false },

series: [{
  name: 'CFR %',
  data: <%= deaths.map { |k, d| cases[k] && ('%0.2f' % (d / cases[k].to_f * 100)).to_f }.to_json.html_safe %>
}, {
  name: 'Adjusted CFR % (10 days)',
  data: <%= deaths.values.each_with_index.map do |d, i|
    c = cases.values[i - 10]
    i >= 10 && c.to_f > 0 ? ('%0.2f' % (d / c.to_f * 100)).to_f : nil
  end.to_json.html_safe %>
}, {
  name: 'Adjusted CFR % (14 days)',
  data: <%= deaths.values.each_with_index.map do |d, i|
    c = cases.values[i - 14]
    i >= 14 && c.to_f > 0 ? ('%0.2f' % (d / c.to_f * 100)).to_f : nil
  end.to_json.html_safe %>
}]
